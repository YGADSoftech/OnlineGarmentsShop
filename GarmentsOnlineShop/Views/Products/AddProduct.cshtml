@using (Html.BeginForm("AddProduct", "Products", FormMethod.Post, new { @class = "form-group", enctype="multipart/form-data"}))
{ 
    <ul class="nav nav-tabs">
        <li class="active">
            <a href="#general" data-toggle="tab">General</a>
        </li>
        <li> <a href="#Decription"  data-toggle="tab">Description</a></li>
        <li> <a href="#Images" data-toggle="tab">Images</a></li>
    </ul>
    <div class="tab-content">
        <div id="general" class="active tab-pane">
            <div class="form-group">
                <div class="container" style="margin-top:10px">
                    <div class="col-lg-4">
                        @Html.DropDownList("Department", (IEnumerable<SelectListItem>)ViewBag.Departments, "Select Department", new { @class = "form-control" })

                    </div>
                    <div class="col-lg-4">
                        <div id="categorydiv">

                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div id="subcategorydiv">

                        </div>
                    </div>
                </div>

                <div class="container" style="margin-top:10px">
                    <div class="col-lg-6">
                        @Html.TextBox("Name", null, new { @class = "form-control", placeholder = "Enter Product's Name" })
                    </div>
                    <div class="col-lg-6"></div>
                </div>
                <div class="container" style="margin-top:10px">
                    <div class="col-lg-6">
                        @Html.TextBox("Price", null, new { @class = "form-control", type = "number", placeholder = "Price" })
                    </div>

                    <div class="col-lg-6">
                        @Html.TextBox("LaunchingDate", null, new { @class = "form-control", type = "date", placeholder = "Date" })
                    </div>
                </div>
                <div class="container" style="margin-top:10px">
                    <div class="col-lg-6">
                        <label style="padding-right:10px;">Sizes Offered: </label>
                        @Html.ListBox("SizesOffered", (IEnumerable<SelectListItem>)ViewBag.Sizes, new { @class = "form-control", size = 6 })
                    </div>
                    <div class=" col-lg-6">
                        <label style="padding-right:10px;">Colors Offered: </label>
                        @Html.ListBox("ColorsOffered", (IEnumerable<SelectListItem>)ViewBag.Colors, new { @class = "form-control", size = 6 })
                    </div>
                </div>
                <div class="container" style="margin-top:10px">

                    <div>
                        <label style="padding-right:10px;">Fabrics: </label>
                    </div>
                    @foreach (var item in (List<SelectListItem>)ViewBag.Fabrics)
                    {
                        <label style="font-weight:normal;padding-right:10px;"> @Html.RadioButton("Fabric", item.Value, item.Selected) @item.Text</label>
                    }
                </div>
            </div>
        </div>

        <div id="Decription" class="tab-pane ">
            <div class="container" style="margin-top:10px">
                @Html.TextArea("Description", new { @class = "form-control", rows = 10, placeholder = "Description" })
            </div>
        </div>
        <div id="Images" class="tab-pane">
            <div class="container" style="margin-top:10px">
                <label>Select images for the product</label>
                <input id="file1" name="Photo1" type="file" />
                <input id="file1" name="Photo2" type="file" />
                <input id="file1" name="Photo3" type="file" />
                <input id="file1" name="Photo4" type="file" />
            </div>
        </div>
    </div>
    <div class="form-group" style="margin:10px 0px;">
        <button type="submit" class="btn"> <span class="glyphicon glyphicon-save"></span></button>
        <button type="reset" class="btn"> <span class="glyphicon glyphicon-eject"></span></button>
    </div>
    }
