@using EntitiesLibrary.Garments
@model Products
    <div class="container">
        @{
            if (Model.Images.Count == 1)
            {
                <section class="container col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding-top:25px;">
                    <div id="my-carousel" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#my-carousel" data-slide-to="0" class="active"></li>
                        </ol>

                        <div class="carousel-inner" role="listbox">
                            @foreach (var img in Model.Images)
                            {
                                <div class="item active">
                                    <img src="@Url.Content(img.Url)" alt="banner-1" />
                                </div>
                            }
                           
                        </div>

                    </div>
                </section>
            }
            else
            {
                <section class="container col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding-top:25px;">
                    <div id="my-carousel" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#my-carousel" data-slide-to="0" class="active"></li>
                            @for (int i = 1; i < Model.Images.Count; i++)
                            {
                                <li data-target="#my-carousel" data-slide-to="@i"></li>
                            }
                            
                        </ol>
                        <div class="carousel-inner" role="listbox">
                            <div class="item active">
                                <img src="@Url.Content(Model.Images.ToList()[0].Url)" alt="banner-1" />
                            </div>
                            @for (int i = 1; i < Model.Images.Count; i++)
                            {
                                <div class="item">
                                    <img src="@Url.Content(Model.Images.ToList()[i].Url)" alt="banner-1" />
                                </div>
                            }
                        </div>
                       
                        

                        <!-- Controls -->
                        <a class="left carousel-control" href="#my-carousel" role="button" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#my-carousel" role="button" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </section>
            }
        }
        <div class=" row container" style="border:1px solid;border-bottom:0px;margin-top:10px">
            <h4>Name:  @Model.Name</h4>
            <h4>Launch Date:  @Model.LaunchDate</h4>
            <h4>Price:  @Model.Price</h4>
            <h4>Department:  @Model.subCategory.Category.department.Name</h4>
            <h4>Category:  @Model.subCategory.Category.Name</h4>
            <h4>Sub Category:  @Model.subCategory.Name</h4>
        </div>
        <div class="row container" style="border:1px solid;border-bottom:0px">

            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                <h4>Size Offered:</h4>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4" style="border-left:1px solid">
                <h4> Size</h4>
                @foreach (var size in Model.SizesOffered)
                {
                    <h5>@size.Name</h5>
                }
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4" style="border-left:1px solid">
                <h4>Size Number</h4>
                @foreach (var size in Model.SizesOffered)
                {
                    <h5>@size.Number</h5>
                }
            </div>
        </div>
        
        <div class="row" style="border:1px solid">
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4" >
                <h4  class="container" style="border:1px solid">Fabrics:  @Model.fabric.Name</h4>
                <div class="container" style="border:1px solid;margin-bottom:10px">
                    <h4>Colors Offered</h4>
                    @foreach (var c in Model.colors)
                    {
                        <h5>@c.Name</h5>
                    }
                </div>
            </div>
            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                <div class="container"  style="border:1px solid;margin-top:10px">
                    <h4>Description</h4>
                    <p>
                        @Model.Description;
                    </p>
                </div>
                
            </div>
        </div>
    </div>