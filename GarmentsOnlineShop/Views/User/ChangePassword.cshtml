@using EntitiesLibrary
@using GarmentsOnlineShop.Models
@model GarmentsOnlineShop.Models.User.LoginModel
@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    User currentUser = Session[WebUtil.CURRENT_USER] as User;
    ViewBag.Title = "Change Password";

    AlertModel alert = TempData["alert"] as AlertModel;
}
@if (alert != null)
{
    @Html.Partial("~/Views/Shared/_Alert.cshtml", alert)
}
<div class="container" style="margin-top:25px; margin-left:35%; margin-right:35%; border:1px solid"">

    <div class="" style="background-color:rgba(77, 68, 68, 0.84)">
        <h3 style="color:white; padding:5px">
            <span class=" glyphicon glyphicon-user"></span> Update your info
        </h3>
    </div>
    <div class="form-group">
        @using (Html.BeginForm("ChangePassword", "User", FormMethod.Post, new { enctype = "multipart/form_data" }))
        {
            <div class="container">
                <h4>Current Password</h4>
                @Html.TextBox("CurrentPassword", null, new { @class = "form-control center-block", id= "pass", placeholder="Current Password" })
            </div>
            <div class="container">
                <h4>New Password</h4>
                @Html.TextBox("NewPassword",null, new { @class = "form-control center-block", id ="newpass", placeholder = "New Password" })
            </div>
            <div class="container">
                <h4>Confirm New Password</h4>
                @Html.TextBox("Confirm", null, new { @class = "form-control center-block", id="confirm", placeholder = "Confirm New Password" })
            </div>
            <label id="label" style="color:red"></label>
                <button type="submit" id="btn" class="btn btn-default form-inline" style="background-color:rgba(77, 68, 68, 0.84); color:white; margin-top:10px">Change</button>
        }
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        $("#btn").click(function (evt) {
            var pass = $("#pass").val();
            var newpass = $("#newpass").val();
            var confirmpass = $("#confirm").val();
            if (newpass != confirmpass) {
                evt.preventDefault();
                $("#label").text("'New Password' does not match with 'Confirm passord' ");
            }
        });




    </script>
    
    
    
    }