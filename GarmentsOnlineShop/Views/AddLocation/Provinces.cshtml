@using EntitiesLibrary.AddressFolder
@model IEnumerable<Province>



<a id="addnewProvince" class="txtbox" href="/AddLocation/Provinces/">  Add New  </a>
<form action="AddProvinces" method="post">
    <div id="formP">

    </div>
    </form>
    @if (Model != null)
                {
                    int count = 0;
                    foreach (var m in Model)
                    {
                        count++;
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                        <h3>@count</h3>
                    </div>
                    <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
                        <a href="/AddLocation/ok" class="shwCities" id="shwCities" data-depid=@m.Id><h3 style="color:#000000">@m.Name</h3></a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">

                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                        <button type="submit" data-Dpid=@m.Id data-Dpname=@m.Name class="btn btn-default editProvince">Edit</button>
                        <a href="/AddLocation/DelProvince/@m.Id" class="btn btn-default">Delete</a>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">

                    </div>
                </div>

            </div>
            
        }
    }
