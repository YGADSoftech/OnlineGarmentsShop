
@using EntitiesLibrary.AddressFolder
@model IEnumerable<City>



<a id="addnewCity" class="txtbox" href="/AddLocation/Cities/">  Add New  </a>
<form action="AddCities" method="post">
    <div id="formCIty">

    </div>
</form>
@if (Model != null)
            {
                int cntr = 0;
                foreach (var m in Model)
                {
                    cntr++;
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                    <h3>@cntr</h3>
                </div>
                <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
                    <h3 style="color:#000000">@m.Name </h3>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">

                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                    <button type="submit" data-idC=@m.Id data-nameC=@m.Name class="btn btn-default editCity" >Edit</button>
                    <a href="/AddLocation/DelCity/@m.Id" class="btn btn-default">Delete</a>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">

                </div>
            </div>

        </div>
       
    }
}


